<% layout('./layouts/boilerplate.ejs') -%> <br />
<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="container">
      <form id="registration-form" method="POST" action="/login">
        <h2 class="">Login</h2>
        <div class="form-group">
          <label for="username" class="form-label">Username</label>
          <input
            id="username"
            class="form-control"
            type="text"
            name="username"
            placeholder="Enter Username"
            autocomplete="username"
          />
        </div>
        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input
            id="password"
            class="form-control"
            type="password"
            name="password"
            placeholder="Enter Password"
            autocomplete="new-password"
          />
        </div>
        <button
          id="submit-btn"
          type="submit"
          class="btn btn-dark mt-3 mb-3 col-md-12"
        >
          Login
        </button>
      </form>
      <a class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="/signup">if new Register here</a>
    </div>
  </div>
</div>
